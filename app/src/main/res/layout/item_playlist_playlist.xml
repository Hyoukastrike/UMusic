<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:weightSum="100">

    <ImageView
        android:id="@+id/img_playlist_playlist"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_music_black"/>

    <TextView
        android:id="@+id/tv_playlist_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Chúng ta của hiện tại"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:layout_weight="100"/>

    <ImageButton
        android:id="@+id/btn_more_playlist"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/white"
        android:src="@drawable/ic_more_black02"/>


</LinearLayout>