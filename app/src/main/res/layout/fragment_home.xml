<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="335.25dp"
            android:layout_height="45.09dp"
            android:hint="Bạn muốn nghe gì"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_search_black"
            android:drawablePadding="10dp"
            android:background="@drawable/custom_et_search"
            android:layout_weight="60"/>

        <ImageView
            android:id="@+id/music_playlist_dowload"
            android:layout_width="42.04dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_music_black"
            android:layout_gravity="center_vertical"
            android:layout_weight="30"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_bxhcategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_category"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rv_bxhcategory"/>

</RelativeLayout>